{
    "ConnectionStrings": {
        // main DB that has all data except events
        "gex": "Host=localhost;Port=5432;Username=username;Password=password;Database=gex;Include Error Detail=true;ApplicationName=gex;Timezone=UTC",

        // event DB that contains only game events
        // this can be the same DB as the main DB, but Gex will treat them as 2 different DBs even if it is the same DB
        "event": "Host=localhost;Port=5432;Username=username;Password=password;Database=gex;Include Error Detail=true;ApplicationName=gex;Timezone=UTC"
    },

    "Discord": {
        "Enabled": false,

        // discord API key
        "Key": "",

        // oauth secret
        "ClientSecret": "",

        // ID of the client. Used to generate invite links and oauth
        "ClientId": 0,

        // ID of the guild that will be the "home" guild
        "GuildId": 0,

        // will commands be registered globally or just in the home guild
        // set to false for testing, and true for release
        "RegisterGlobalCommands": false,

        // replace the |1| with the emoji ID in the bot settings
        "Emojis": {
            "armada": "<:armada:1>",
            "cortex": "<:cortex:1>",
            "legion": "<:legion:1>",
            "random": "<:random:1>"
        }
    },

    "Spring": {
        // disabled by Default
        "Enabled": false,

        // IP of the lobby spring host
        "Host": "127.0.0.1",
        "Port": 8200,

        // username to login with
        // MAKE SURE IF USING AN ALT THAT THE MODERATORS HAVE CLEARED IT
        "Username": "user",
        "Password": "password",

        // do familiars have caster permissions and can join without needing a password?
        "FamiliarsHaveCasterPerms": false
    },

    // GitHub options, used for the /gex unit Discord command
    "GitHub": {
        "ApiKey": null, // api key. optional, can speed up fetching the data
        "UnitDataOrganization": "beyond-all-reason", // organization that holds the repository
        "UnitDataRepository": "Beyond-All-Reason", // name of the repository
        "UnitDataPath": "units" // folder that has all of the unit data
    },

    // used for Familiar auth to upload games
    "Jwt": {
        // disabled by default
        "Enabled": false,
        "Authority": ""
    }

}